// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //
//
// Gravity: flow is top-to-bottom (gravity-assisted per HX spec)
// Z is the flow direction (downward), so gravity is in +Z

dimensions      [0 1 -2 0 0 0 0];
value           (0 0 9.81);

